<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ShowTestSummary">

    <TextView
        android:id="@+id/txtSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="Opis wyników badań"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/receivedImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSummary"
        android:layout_gravity="center"
        android:layout_margin="4dp"/>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/receivedImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_testSummary"
                android:layout_below="@+id/txtSummary"
                android:paddingLeft="4dp"
                android:text="Tutaj będzie opis badania"
                android:textSize="14sp"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>